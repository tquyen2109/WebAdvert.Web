@model WebAdvert.Web.Models.Accounts.LoginModel

    <div class="row">
        <div class="col-md-4">
            <h4>Login using your email address and password</h4>
            <h5>
                <a asp-controller="Accounts" asp-action="Signup">
                    If you are not a member you can sign up here
                </a>
            </h5>
            <hr />
            <form asp-action="Login" asp-controller="Accounts" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe"></label>
                        <input asp-for="RememberMe" />

                    </div>
                </div>
                <button type="submit">Login</button>
                <button>
                    <a asp-controller="Accounts" asp-action="ForgotPassword">
                        Forgot password ?
                    </a>
                </button>
            </form>
           
        </div>
    </div>